<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_cardview_password"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imageview_password_listview_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_foreground_36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_password_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-black"
        android:singleLine="true"
        android:text="Name"
        android:textColor="@color/normal_text_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_password_listview_item"
        app:layout_constraintEnd_toStartOf="@+id/imagebutton_copy_username"
        app:layout_constraintStart_toEndOf="@+id/imageview_password_listview_item"
        app:layout_constraintTop_toTopOf="@+id/imageview_password_listview_item"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textview_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:singleLine="true"
        android:text="Username"
        android:textColor="@color/normal_text_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/imagebutton_copy_username"
        app:layout_constraintStart_toStartOf="@+id/imageview_password_listview_item"
        app:layout_constraintTop_toBottomOf="@+id/imageview_password_listview_item" />

    <ImageButton
        android:id="@+id/imagebutton_copy_password"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/icon_vpn_key_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/normal_text_color" />

    <ImageButton
        android:id="@+id/imagebutton_copy_username"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/icon_person_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imagebutton_copy_password"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487"
        app:tint="@color/normal_text_color" />

</androidx.constraintlayout.widget.ConstraintLayout>